doctype html
html(lang = "hu")
   head
      // META
      meta(charset = 'utf-8')
      meta(http-equiv = 'X-UA-Compatible' content = 'IE=edge')
      meta(name = 'viewport' content = 'width=device-width, initial-scale=1')
      meta(name = 'description' content = 'TEST')
      meta(name = 'author' content = 'sbslord')
      
      title #{pageTitle}
      //Bootstrap-css
      link(rel="stylesheet", href = 'bootstrap.min.css')
      if styles.length
         //Styles
         each style in styles
            link(rel="stylesheet", href = style)
      if scripts.length
         //Scripts
         each script in scripts 
            script(src = script)
   body
      main
         header
            block header
            nav.navbar.navbar-default.navbar-static-top
               .container
                  .navbar-header
                     button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='.navbar-collapse')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                     a.navbar-brand(href='#') SBSlord-Project
                  .navbar-collapse.collapse
                     ul.nav.navbar-nav
                        li.active
                           a(href='/') Főoldal
                     form.navbar-form.navbar-right
                        .form-group
                           input.form-control(type="email" id="inputEmail" placeholder="E-mail")
                        .form-group
                           input.form-control(type="password" id="inputPassword" placeholder="Jelszó")
                        button.btn.btn-default(type="submit") Belépés
         section#wrapper
            block content
         footer
            .row#bot
               .col-md-12 @SBSlord-Project
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
      script(src='bootstrap.min.js')